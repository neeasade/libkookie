####
#  General Config
####

source colours

set folder = $HOME/office/mail/
set spoolfile = +INBOX
set record = +Sent
set trash = +Trash
set postponed = +Draft

set from = "kookie@spacekookie.de"
set realname = "Katharina Fey"
set sendmail = "msmtp -a default kookie@spacekookie.de"

set sort="threads"
set strict_threads="yes"
set sort_browser = 'reverse-date'
set sort_aux="reverse-date"

set editor = $EDITOR
set date_format="%y-%m-%d %I:%M"
set index_format="%2C %?X?A& ? %D   %-32.32F   %s "
set forward_format = "Fwd: %s"

mailboxes `find $HOME/office/mail -type d -name cur -printf '%h '`


####
#  GPG setup
####
set crypt_use_gpgme=yes
set crypt_autosign=yes
set crypt_verify_sig=yes
set crypt_replysign=yes
set crypt_replyencrypt=yes
set crypt_replysignencrypted=yes
set crypt_autoencrypt = yes

set pgp_default_key = 555F2E4B6F87F91A4110669E90734A9E619C8A6C
set pgp_check_gpg_decrypt_status_fd
set pgp_use_gpg_agent = yes
set pgp_self_encrypt = yes

set pgp_good_sign       = "^\\[GNUPG:\\] GOODSIG"
set pgp_decryption_okay = "^\\[GNUPG:\\] DECRYPTION_OKAY"


####
#  Sidebar
####

set sidebar_visible
set mail_check_stats
set sidebar_short_path
set sidebar_folder_indent
set sidebar_width = 25
set sidebar_divider_char = '|'
set sidebar_indent_string = '  '
set sidebar_format = "%B %* [%?N?%N / ?%S]"
